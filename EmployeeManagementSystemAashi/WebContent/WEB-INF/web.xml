<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>EmployeeManagementSystemAashi</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>InsertingTheData</servlet-name>
    <servlet-class>com.emp.dao.SaveEmployee</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InsertingTheData</servlet-name>
    <url-pattern>/SaveEmployee</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.emp.dao.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>VerifyingtheOtp</servlet-name>
    <servlet-class>com.emp.OtpSMS.VerifyingOTPSMS</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VerifyingtheOtp</servlet-name>
    <url-pattern>/VerifyingOtp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginUsingOtp</servlet-name>
    <servlet-class>com.emp.OtpSMS.sendOTPSMS</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginUsingOtp</servlet-name>
    <url-pattern>/loginViaOtp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeletingTheData</servlet-name>
    <servlet-class>com.emp.dao.DeleteEmployee</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeletingTheData</servlet-name>
    <url-pattern>/DeleteEmployee</url-pattern>
  </servlet-mapping>
</web-app>